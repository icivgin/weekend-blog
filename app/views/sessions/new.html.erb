<div class="container">
	<h1>Login</h1>
	<%= form_for :user, :url => url_for(:controller => 'sessions', :action => 'create'), html: {class: "form-group"} do |f| %>
		<%= f.label :username %>:
		<%= f.text_field :username, class: "form-control", placeholder: "Add username here...", :required => true, :autofocus => true%><br />

		<%= f.label :password %>:
		<%= f.text_field :password, class: "form-control", placeholder: "Add password here...",  :required => true,type: "password" %><br />

		<%= f.submit "Login", class: 'btn btn-primary'%>
	<% end %>
	<%= @error %>
</div>